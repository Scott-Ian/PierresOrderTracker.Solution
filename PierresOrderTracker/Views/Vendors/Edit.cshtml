@using PierresOrderTracker.Models;
@{
  Layout = "_Layout";
}

<div class="container">
  <h1>Editing Vendor: @Model.Name</h1>

  <form action="/vendors/@Model.Id" method ="post">
    <input id="id" name = "id" type = "hidden" value="@Model.Id">
    <label for="name">Vendor Name</label>
    <input id="name" name="name" type="text" value="@Model.Name" required>
    <label for="description">Vendor Description</label>
    <input id="description" name="description" type="text" value="@Model.Description" required>
    <button type="submit">Add</button>
  </form>

  <p><a href='/vendors'>View All Vendors</a></p>
  <p><a href='/'>Home</a></p>

</div>