@using PierresOrderTracker.Models;
@{
  Layout = "_Layout";
}

<div class="container">

  @if(Model.Count == 0)
  {
    <h3>Oops Pierre, you haven't entered any Vendors yet!</h3>
    <h3><a href='/vendors/new'>Would you like to add a new Vendor?</a></h3>
  }
  else
  {
    <ul>
    @foreach(Vendor vendor in Model)
    {
      <li><a href="/vendors/@vendor.Id">@vendor.Name</a></li>
      <br>
    }
    </ul>
  }

  <p><a href='/vendors'>View All Vendors</a></p>
  <p><a href='/vendors/new'>Add A New Vendor!</a></p>
  <p><a href='/'>Home</a></p>
</div>