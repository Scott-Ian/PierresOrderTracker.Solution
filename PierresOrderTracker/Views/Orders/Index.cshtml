@using PierresOrderTracker.Models;
@{
  Layout = "_Layout";
}

<div class="container">

  @if(Model.Count == 0)
  {
    <h3>Oops Pierre, you haven't entered any Orders yet!</h3>
    <h3><a href='/vendors'>Would you like to view Vendors and add an Order there?</a></h3>
  }
  else
  {
    <ul>
    @foreach(Order order in Model)
    {
      <li>@order.Title: $@order.Price</li>
      <br>
    }
    </ul>
  }

  <p><a href='/vendors'>View All Vendors</a></p>
  <p><a href='/vendors/new'>Add A New Vendor!</a></p>
  <p><a href='/'>Home</a></p>
</div>